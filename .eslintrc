{
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "babel"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": ["error", "never"],
    "class-methods-use-this": 0,
    "no-console": 0,
    "no-throw-literal": 0,
    "no-use-before-define": ["error", { "functions": false }],
    "import/prefer-default-export": 0
  }
}